<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        android:background="#9C0A1E2E"
        android:backgroundTint="#C10A1E2E"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Grade Calculator"
        android:textAlignment="center"
        android:textColor="#FBF6F6"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:background="#59767780"
        android:ems="10"
        android:hint="Quizes%15"
        android:inputType="textPersonName"
        android:textColorHint="#74FFC107"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#F7FBFB"/>

    <EditText
        android:id="@+id/EditText2"
        android:layout_width="309dp"
        android:layout_height="50dp"

        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:background="#59767780"
        android:ems="10"
        android:hint="Homework 25%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColorHint="#74FFC107"
        android:textColor="#F7FBFB"/>

    <EditText
        android:id="@+id/EditText3"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:background="#59767780"
        android:ems="10"
        android:hint="Mid terms 30%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="#74FFC107"
        android:textColor="#F7FBFB"/>

    <EditText
        android:id="@+id/EditText4"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:background="#59767780"
        android:ems="10"
        android:hint="Final 30%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="30dp"
        android:textColorHint="#74FFC107"
        android:textColor="#F7FBFB"/>

    <Button
        android:id="@+id/button"
        android:layout_width="247dp"
        android:layout_height="66dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        android:background="#BE0C0F22"
        android:fontFamily="casual"
        android:text="CALCULATE"
        android:textSize="25sp"
        android:textColor="#EDFDFC"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="66dp"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="20dp"
        android:background="#BE0C0F22"
        android:fontFamily="casual"
        android:text="reset"
        android:textColor="#EDFDFC"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="42dp"
        android:layout_marginStart="90dp"
        android:layout_marginRight="30dp"
        android:background="#7E1D4798"
        android:text=""
        android:textAlignment="center"
        android:textColor="#F1F8F7"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#BE1A0D32"
        android:onClick="onclick1"
        android:text="next"
        android:textColor="#F9FDFD"
        android:textSize="30sp" />

</LinearLayout>